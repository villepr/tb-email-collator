{
  "manifest_version": 3,
  "name": "Email Collation Tool",
  "version": "1.0.0",
  "description": "Collate and deduplicate emails from selected senders using AI.",
  "author": "Your Name",

  "browser_specific_settings": {
    "gecko": {
      "id": "email-collation@example.com",
      "strict_min_version": "128.0"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "action": {
    "default_popup": "popup/collate.html",
    "default_title": "Email Collation Tool",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png"
    }
  },

  "permissions": [
    "messagesRead",
    "accountsRead",
    "storage",
    "menus",
    "tabs",
    "downloads"
  ],

  "host_permissions": [
    "http://localhost:11434/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src http://localhost:11434 https://generativelanguage.googleapis.com;"
  },

  "default_locale": "en"
}
